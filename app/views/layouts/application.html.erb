<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
   <header>
	   <nav class="nav navbar-nav navbar-left title">
      <%= link_to "LOGO", root_path %>
    </nav>

    <ul class="nav navbar-nav navbar-right">
	       <% if admin_signed_in? %>
	        <li class="nav-item">
	         <%= link_to "商品一覧", admin_items_path %>
          </li>
	        <li class="nav-item">
	         <!--%= link_to "会員一覧", admin_customers_path %>-->
	        </li>
	        <li class="nav-item">
     	     <!--%= link_to "注文履歴一覧",  admin_order_path %>-->
	        </li>
	        <li class="nav-item">
	         <!--%= link_to "ジャンル一覧", admin_genres_path %>-->
        	</li>
	        <li class="nav-item">
           <%= link_to "ログアウト", destroy_admin_session_path, method: :delete %>
	        </li>

         <% elsif customer_signed_in? %>
          <li class="nav-item">
	         <%= link_to "マイページ", my_page_path %>
          </li>
	        <li class="nav-item">
	         <%= link_to "商品一覧", items_path %>
	        </li>
	        <li class="nav-item">
     	     <%= link_to "カート", cart_items_path %>
	        </li>
	        <li class="nav-item">
           <%= link_to "ログアウト", destroy_customer_session_path, method: :delete %>
	        </li>

         <% else %>
          <li class="nav-item">
           <%= link_to "About", about_path %>
	        </li>
	        <li class="nav-item">
	         <%= link_to "商品一覧", items_path %>
	        </li>
	        <li class="nav-item">
	         <%= link_to "新規登録",  new_customer_registration_path %>
        	</li>
	        <li class="nav-item">
	         <%= link_to "ログイン", new_customer_session_path %>
	      </ul>
	      <% end %>
	    </header>
    <%= yield %>
  </body>
</html>
