<h2>注文履歴詳細</h2>
 <table class="table">
    <h4>注文情報</h4>
      <tr>
        <th>注文日</th>
        <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
      </tr>

      <tr>
        <th>配送先</th>
        <td>
          〒<%= @order.shipping_post_code %>
           <%= @order.shipping_address %><br>
           <%= @order.shipping_name %>
        </td>
      </tr>

      <tr>
        <th>支払方法</th>
        <td><%= @order.payment_method_i18n %></td>
      </tr>

      <tr>
        <th>ステータス</th>
        <td><%= @order.status %></td>
      </tr>
  </table>

  <h4>注文内容</h4>
  <table class="table">
    <thead>
      <tr>
        <th>商品</th>
        <th>単価(税込）</th>
        <th>個数</th>
        <th>小計</th>
      </tr>
    </thead>

   <tbody>
    <% @order.order_items.each do |order_item| %>
      <tr>
        <td><%= order_item.item.name %></td>
        <td>¥<%= order_item.purchase_price.to_s(:delimited) %></td>
        <td><%= order_item.quantity%></td>
        <td>¥<%= order_item.subtotal.to_s(:delimited) %></td>
      </tr>
    <% end %>
   </tbody>
  </table>

  <table class="table">
    <h4>請求情報</h4>
      <tr>
        <th>商品合計</th>
        <td><%= @order.total_price - 800 %>円</td>
      </tr>

      <tr>
        <th>配送料</th>
        <td><%= @order.postage %>円</td>
      </tr>

      <tr>
        <th><strong>ご請求金額</strong></th>
        <td><%= @order.total_price %>円</td>
      </tr>
  </table>