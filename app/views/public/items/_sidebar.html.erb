<table class="genre-table table table-bordered table-hover shadow-lg">
  <thead class="genre-thead">
    <tr>
      <th class="active table-active">ジャンル検索</th>
    </tr>
  </thead>
  <tbody>
    <% genres.each do |genre| %>
    <tr>
      <td>
        <%= link_to genre.name, genre_path(genre.id), class:"ec-genre-list-item text-dark"%>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>