<div class="container">
  <div class="row">
    <div class="col-7 mx-auto">
      <h4 class="m-3"><strong>ジャンル一覧・追加</strong></h4>
      <%= form_with model:@genre, url: admin_genres_path, local:true do |f| %>
      <p class="my-5 mx-2">ジャンル名
          <%= f.text_field :name, class: "mx-2" %>
          <%= f.submit '新規登録', class: "btn btn-success mx-2" %>
        </p>
      <% end %>

      <table class="table table-hover table-inverse shadow-lg">
        <thead>
          <tr>
            <th class="table-active">ジャンル</th>
            <th class="table-active"></th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
            <tr>
              <td>
                <%= genre.name %>
              </td>
              <td>
                <%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-success mx-2" %>
                <%= link_to "削除する", admin_genre_path(genre.id), method: :delete,class: "btn btn-danger" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <div class="col-md-5 mx-auto mt-5 pl-5 pt-2"><%= paginate @genres %></div>
    </div>
  </div>
</div>
