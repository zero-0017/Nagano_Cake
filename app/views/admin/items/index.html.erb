<div class="container">
  <div class="row">
    <div class="col-12 px-0 mx-auto">
      <div class="d-flex bd-highlight mb-3">
        <h4><strong>商品一覧</strong></h4>
        <%= link_to new_admin_item_path, class: 'ml-auto' do %>
          <button type="button" class="btn btn-primary rounded-circle p-0 ml-auto font-weight-bold" style="width:2rem;height:2rem;">＋</button>
        <% end %>
      </div>
      <table class="table table-hover table-inverse shadow-lg">
        <thead>
          <tr>
            <th class="table-active">商品ID</th>
            <th class="table-active">商品名</th>
            <th class="table-active">税抜価格</th>
            <th class="table-active">ジャンル</th>
            <th class="table-active">ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @items.each do |item| %>
            <tr>
              <td>
                <%= item.id %>
              </td>
              <td>
                <%= link_to item.name, admin_item_path(item.id) %>
              </td>
              <td>
                <%= item.price %>
              </td>
              <td>
                <%= item.genre.name %>
              </td>
              <td><% if item.is_active == true %>
                    <p class="text-success font-weight-bold">販売中</p>
                  <% else %>
                    <p class="text-danger font-weight-bold">販売停止中</p>
                  <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <div class="col-md-5 mx-auto mt-5"><%= paginate @items %></div>
      </div>
    </div>
  </div>
</div>