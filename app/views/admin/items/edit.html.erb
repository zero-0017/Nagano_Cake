<div class="container">
  <div class="row">
    <div class="col-lg-5 col-5 px-0 mx-auto">
      <h2>商品編集</h2>
      <%= form_with model: @item, url: admin_item_path, method: :patch do |f| %>
        <div class="form-group">
          <label for="item_image">商品画像
          <%= f.file_field :image, accept: "image/*", class: "form-control-file item_image" %>
        </div>
        <div class="form-group">
          <label for="item_name">商品名</label>
          <%= f.text_field :name, class: "form-control name" %>
        </div>
        <div class="form-group">
          <label for="item_introduction">商品説明</label>
          <%= f.text_area :introduction, class: "form-control introduction" %>
        </div>
        <div class="form-group">
          <label for="item_name">ジャンル</label>
          <%= f.collection_select :genre_id, Genre.all, :id, :name, include_blank: "選択して下さい" %>
        </div>
        <div class="form-group">
          <label for="item_price">税抜き価格</label>
          <%= f.text_field :price, type: "number", class: "form-control price" %>
        </div>
        <div class="form-group">
          <label for="item_is_active">販売ステータス</label>
          <div class="is_active">
            <div>
              <%= f.radio_button :is_active, true %>
              <%= f.label :is_active, '販売中', value: true, class: "mr-5" %>
              <%= f.radio_button :is_active, false %>
              <%= f.label :is_active, '販売停止中', value: false %>
            </div>
          </div>
        </div>
        <div class="form-group col-4 mx-auto">
          <%= f.submit '変更を保存', class: "btn btn-success" %>
        </div>
      <% end %>
    </div>
  </div>
</div>